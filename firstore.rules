rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validate data on create
      allow create: if request.resource.data.keys().hasAll(['email', 'balance', 'createdAt']) &&
                    request.resource.data.email is string &&
                    request.resource.data.balance is number;
      
      // Validate updates
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly([
        'botState', 'botFiles', 'botUrl', 'lastDeployed', 
        'deploymentId', 'balance', 'uptimeStart', 'githubRepo',
        'netlifySiteId', 'netlifyUrl'
      ]);
    }
    
    // Deployment logs collection
    match /deployments/{deploymentId} {
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && 
                   resource.data.userId == request.auth.uid;
    }
    
    // Bot files storage
    match /bot-files/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
